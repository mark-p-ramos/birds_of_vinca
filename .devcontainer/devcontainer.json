{
  "name": "Birds of Vinca - Python Monorepo",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "Anthropic.claude-code"
      ],
      "settings": {
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "ruff.enable": true
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup-venvs.sh",

  "postStartCommand": "sudo apt-get update && sudo apt-get install -y ffmpeg",

  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/libs:${PYTHONPATH}"
  },

  "remoteUser": "vscode"
}
